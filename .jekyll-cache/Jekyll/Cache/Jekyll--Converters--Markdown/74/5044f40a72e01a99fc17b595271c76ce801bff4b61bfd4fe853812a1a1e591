    <span class="n">ca16</span> <span class="o">=</span> <span class="mf">6.7e+26</span> <span class="o">*</span> <span class="n">rho</span> <span class="o">/</span> <span class="n">Qa16</span> <span class="o">*</span> <span class="n">exp</span><span class="x">(</span><span class="o">-</span><span class="mf">39.757</span><span class="o">/</span><span class="n">T9</span><span class="o">^</span><span class="x">(</span><span class="mi">1</span><span class="o">/</span><span class="mi">3</span><span class="x">)</span><span class="o">-</span><span class="x">(</span><span class="mf">0.631</span><span class="o">*</span><span class="n">T9</span><span class="x">)</span><span class="o">^</span><span class="mi">2</span><span class="x">)</span> <span class="o">/</span> <span class="n">T9</span><span class="o">^</span><span class="x">(</span><span class="mi">2</span><span class="o">/</span><span class="mi">3</span><span class="x">)</span>
