\[\Gamma^0_{0 \beta} 
= \frac{1}{2} g^{00} (g_{00, \beta}+ g_{0 \beta, 0}- g_{0 \beta, 0}) 
= 0\]

\[\Gamma^0_{1 1} 
= \frac{1}{2} g^{00} (g_{01,1}+ g_{0 1, 1}- g_{11, 0}) 
= -\frac{1}{2} g^{00} g_{11, 0} 
= \frac{1}{2} E_{+, 0}\]

\[\Gamma^0_{11} 
= - \frac{1}{2} g^{00} g_{22, 0} 
= - \frac{1}{2} E_{+, 0}\]

\[\Gamma^0_{33} = 0\]

\[\Gamma^0_{ij} = 0 \ (i \neq j)\]

\[\Gamma^1_{0 0} 
