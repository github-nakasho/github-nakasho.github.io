<span class="n">u0</span> <span class="o">=</span> <span class="x">[</span><span class="mf">1.0</span><span class="x">;</span> <span class="mf">0.0</span><span class="x">;</span> <span class="mf">0.0</span><span class="x">;</span> <span class="mf">0.0</span><span class="x">]</span>
